{
    // config
    "esversion": 5,

    "node": true,

    // enforcing
    "camelcase": true,
    "eqeqeq": true,
    "indent": 2,
    "latedef": true,
    "maxlen": 100,
    "newcap": true,
    "quotmark": "single",
    "strict": true,
    "undef": true,
    "unused": true,

    // relaxing
    "eqnull": true
}
